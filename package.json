{
  "name": "fed-embed",
  "version": "1.0.0",
  "description": "A standalone web component you can use to embed an RSS feed on a webpage.",
  "license": "MIT",
  "devDependencies": {
    "jsmin": "^1.0.1",
    "parcel": "^2.9.3",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "yarn tsc && node build.mjs && cp ./dist/fed-embed.min.js ./docs/fed-embed.min.js",
    "dev": "parcel index.html  --dist-dir './docs' --no-source-maps",
    "deploy": "parcel build index.html --dist-dir './docs' --no-source-maps"
  }
}
